<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".home.PhotographerDetailsActivity"
    tools:ignore="SmallSp">

<!--Wallpaper-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:gravity="center"
        android:background="@drawable/wallpaper_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10"
            tools:ignore="UselessParent">
            <ImageView
                android:id="@+id/iv_avatar"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:layout_marginStart="10dp"
                app:srcCompat="@drawable/img_2"
                android:contentDescription="@string/image" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:paddingStart="10dp"
                android:orientation="vertical"
                tools:ignore="RtlSymmetry">

                <TextView
                    android:id="@+id/full_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Amelia Brown"
                    android:textColor="@color/white"
                    android:textSize="23sp" />

                <TextView
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="4459 Wyatt Street, United States"
                    android:textColor="@color/white"
                    android:textSize="13sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:text="4.6"
                            android:textColor="@color/white"
                            android:textSize="16sp"/>
                        <RatingBar
                            android:id="@+id/average_rating_bar_1"
                            style="@style/Widget.AppCompat.RatingBar.Small"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:numStars="5"
                            android:rating="4.6"
                            android:stepSize="0.1"
                            android:theme="@style/MyRatingBar"/>
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginVertical="10dp"
                        android:layout_marginHorizontal="10dp"
                        android:background="@color/white"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:text="29 K"
                            android:textColor="@color/white"
                            android:textSize="16sp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Followers"
                            android:textColor="@color/white"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginVertical="0dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="22dp"
                        android:background="@drawable/round_button"
                        android:text="@string/follow"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        tools:ignore="TouchTargetSizeCheck" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

<!--ScrollView    -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <!--Detail Content-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="260dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/border_top_rectangle">

            <!--Portfolio-->
            <LinearLayout
                android:id="@+id/detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="vertical"
                android:paddingHorizontal="23dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="30sp"
                    android:text="@string/portfolio"
                    android:textColor="@color/black"
                    android:textSize="21sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/experience_years"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:text="5"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/specialize"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:text="@string/specialization_1"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/favorite_spot"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="60dp"
                    android:text="@string/spot_1"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/service_package"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/service_package"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <!--Speciality Album-->
            <TextView
                android:id="@+id/speciality_album"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="23dp"
                android:layout_marginTop="60dp"
                android:text="@string/speciality_album"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/detail" />

            <TextView
                android:id="@+id/see_all_albums"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="23dp"
                android:layout_marginBottom="20dp"
                android:text="@string/see_all_albums"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintBottom_toTopOf="@id/view_flipper"
                app:layout_constraintEnd_toEndOf="parent" />

            <!--ViewFlipper-->
            <ViewFlipper
                android:id="@+id/view_flipper"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="20dp"
                android:autoStart="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/speciality_album">

                <ImageView
                    android:id="@+id/iv_img1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/image"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/img_3" />

                <ImageView
                    android:id="@+id/iv_img2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/image"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/img_4" />

                <ImageView
                    android:id="@+id/iv_img3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/image"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/img_5" />

                <ImageView
                    android:id="@+id/iv_img4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/image"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/img_6" />

                <ImageView
                    android:id="@+id/iv_img5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/image"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/img_7" />
            </ViewFlipper>

            <TextView
                android:id="@+id/tv_img_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="@string/example_content"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="@+id/view_flipper"
                app:layout_constraintTop_toTopOf="@+id/view_flipper" />

            <ImageButton
                android:id="@+id/btn_next"
                android:layout_width="38dp"
                android:layout_height="100dp"
                android:background="#23000000"
                android:contentDescription="@string/image"
                android:src="@drawable/ic_navigate_next_24"
                app:layout_constraintBottom_toBottomOf="@+id/view_flipper"
                app:layout_constraintEnd_toEndOf="@+id/view_flipper"
                app:layout_constraintTop_toTopOf="@+id/view_flipper"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageButton
                android:id="@+id/btn_previous"
                android:layout_width="38dp"
                android:layout_height="100dp"
                android:background="#23000000"
                android:contentDescription="@string/image"
                android:src="@drawable/ic_navigate_before_24"
                app:layout_constraintBottom_toBottomOf="@+id/view_flipper"
                app:layout_constraintStart_toStartOf="@+id/view_flipper"
                app:layout_constraintTop_toTopOf="@+id/view_flipper"
                tools:ignore="SpeakableTextPresentCheck" />

            <!--Review Overview-->
            <TextView
                android:id="@+id/rating_and_review"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="23dp"
                android:layout_marginTop="60dp"
                android:text="@string/rating_and_reviews"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view_flipper" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/review_overview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/rating_and_review">

                <TextView
                    android:id="@+id/rating_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="23dp"
                    android:text="@string/rating_example"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <RatingBar
                    android:id="@+id/average_rating_bar_2"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:numStars="5"
                    android:rating="4.6"
                    android:stepSize="0.1"
                    android:theme="@style/MyRatingBar"
                    app:layout_constraintBottom_toBottomOf="@+id/rating_number"
                    app:layout_constraintStart_toEndOf="@+id/rating_number"
                    app:layout_constraintTop_toTopOf="@+id/rating_number" />

                <View
                    android:id="@+id/separate_line"
                    android:layout_width="1dp"
                    android:layout_height="16dp"
                    android:layout_marginStart="5dp"
                    android:background="@color/black"
                    app:layout_constraintBottom_toBottomOf="@+id/average_rating_bar_2"
                    app:layout_constraintStart_toEndOf="@+id/average_rating_bar_2"
                    app:layout_constraintTop_toTopOf="@+id/average_rating_bar_2" />

                <TextView
                    android:id="@+id/review_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="@string/review_number"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="@+id/separate_line"
                    app:layout_constraintStart_toEndOf="@+id/separate_line"
                    app:layout_constraintTop_toTopOf="@+id/separate_line" />

                <TextView
                    android:id="@+id/see_all_reviews"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="23dp"
                    android:text="@string/see_all_reviews"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!--Review Comments-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="23dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="23dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/review_overview">

                <TextView
                    android:id="@+id/tv_username_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:text="@string/example_content"
                    app:layout_constraintBottom_toBottomOf="@+id/card_view_1"
                    app:layout_constraintStart_toEndOf="@+id/card_view_1"
                    app:layout_constraintTop_toTopOf="@+id/card_view_1" />

                <TextView
                    android:id="@+id/tv_date_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="@string/example_content"
                    android:textSize="11.5sp"
                    app:layout_constraintBottom_toBottomOf="@+id/rb_rating_1"
                    app:layout_constraintStart_toEndOf="@+id/rb_rating_1"
                    app:layout_constraintTop_toTopOf="@+id/rb_rating_1" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_view_1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    app:cardCornerRadius="30dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/iv_reviewer_avatar_1"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:contentDescription="@string/image"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/img_6"/>
                </androidx.cardview.widget.CardView>

                <RatingBar
                    android:id="@+id/rb_rating_1"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:numStars="5"
                    android:rating="4"
                    android:stepSize="1"
                    android:theme="@style/MyRatingBar"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/card_view_1" />

                <TextView
                    android:id="@+id/tv_comment_1"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginTop="3dp"
                    android:background="@color/white"
                    android:text="@string/example_content"
                    app:layout_constraintTop_toBottomOf="@+id/rb_rating_1" />

                <TextView
                    android:id="@+id/tv_username_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:text="@string/example_content"
                    app:layout_constraintBottom_toBottomOf="@+id/card_view_2"
                    app:layout_constraintStart_toEndOf="@+id/card_view_2"
                    app:layout_constraintTop_toTopOf="@+id/card_view_2" />

                <TextView
                    android:id="@+id/tv_date_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="@string/example_content"
                    android:textSize="11.5sp"
                    app:layout_constraintBottom_toBottomOf="@+id/rb_rating_2"
                    app:layout_constraintStart_toEndOf="@+id/rb_rating_2"
                    app:layout_constraintTop_toTopOf="@+id/rb_rating_2" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_view_2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="10dp"
                    app:cardCornerRadius="30dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_comment_1">

                    <ImageView
                        android:id="@+id/iv_reviewer_avatar_2"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:contentDescription="@string/image"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/img_6"/>
                </androidx.cardview.widget.CardView>

                <RatingBar
                    android:id="@+id/rb_rating_2"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:numStars="5"
                    android:rating="5"
                    android:stepSize="1"
                    android:theme="@style/MyRatingBar"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/card_view_2" />

                <TextView
                    android:id="@+id/tv_comment_2"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginTop="3dp"
                    android:background="@color/white"
                    android:text="@string/example_content"
                    app:layout_constraintTop_toBottomOf="@+id/rb_rating_2" />

                <TextView
                    android:id="@+id/tv_username_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:text="@string/example_content"
                    app:layout_constraintBottom_toBottomOf="@+id/card_view_3"
                    app:layout_constraintStart_toEndOf="@+id/card_view_3"
                    app:layout_constraintTop_toTopOf="@+id/card_view_3" />

                <TextView
                    android:id="@+id/tv_date_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="@string/example_content"
                    android:textSize="11.5sp"
                    app:layout_constraintBottom_toBottomOf="@+id/rb_rating_3"
                    app:layout_constraintStart_toEndOf="@+id/rb_rating_3"
                    app:layout_constraintTop_toTopOf="@+id/rb_rating_3" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_view_3"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="10dp"
                    app:cardCornerRadius="30dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_comment_2">

                    <ImageView
                        android:id="@+id/iv_reviewer_avatar_3"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:contentDescription="@string/image"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/img_6"/>
                </androidx.cardview.widget.CardView>

                <RatingBar
                    android:id="@+id/rb_rating_3"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:numStars="5"
                    android:rating="3"
                    android:stepSize="1"
                    android:theme="@style/MyRatingBar"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/card_view_3" />

                <TextView
                    android:id="@+id/tv_comment_3"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginTop="3dp"
                    android:background="@color/white"
                    android:text="@string/example_content"
                    app:layout_constraintTop_toBottomOf="@+id/rb_rating_3" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

<!--Top bar & Back Button-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:background="@color/light_grey">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:padding="10dp"
            android:src="@drawable/ic_navigate_before_24"
            android:contentDescription="@string/image"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    </LinearLayout>

<!--Bottom bar & Contact, Booking Button-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:weightSum="2">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/chat"
            android:background="@drawable/rectangle_button"
            android:textColor="@color/white"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/booking"
            android:background="@drawable/rectangle_button"
            android:textColor="@color/white"/>

    </LinearLayout>
</RelativeLayout>
