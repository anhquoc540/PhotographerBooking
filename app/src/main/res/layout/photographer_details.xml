<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".home.PhotographerDetailsActivity"
    tools:ignore="SmallSp">

<!--Wallpaper-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:gravity="center"
        android:background="@drawable/wallpaper_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10"
            tools:ignore="UselessParent">
            <ImageView
                android:id="@+id/iv_avatar"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:layout_marginStart="10dp"
                app:srcCompat="@drawable/img"
                android:contentDescription="@string/image" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:paddingStart="15dp"
                android:orientation="vertical"
                tools:ignore="RtlSymmetry">

                <TextView
                    android:id="@+id/full_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Zhou Shen"
                    android:textColor="@color/white"
                    android:textSize="25sp"/>
                <TextView
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Shang Hai, China"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/white"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:text="29 K"
                            android:textColor="@color/white"
                            android:textSize="15sp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Followers"
                            android:textColor="@color/white"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginVertical="10dp"
                        android:layout_marginHorizontal="10dp"
                        android:background="@color/white"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="29"
                            android:textColor="@color/white"
                            android:textSize="15sp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Followings"
                            android:textColor="@color/white"
                            android:textSize="12sp"/>
                    </LinearLayout>

                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginVertical="0dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="22dp"
                        android:background="@drawable/round_button"
                        android:text="@string/follow"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        tools:ignore="TouchTargetSizeCheck" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

<!--ScrollView    -->
    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

<!--Main Content-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="230dp"
            android:background="@drawable/border_top_rectangle">

<!--Portfolio-->
            <LinearLayout
                android:id="@+id/detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="vertical"
                android:paddingHorizontal="23dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30sp"
                    android:fontFamily="cursive"
                    android:text="@string/portfolio"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textColor="@color/primary_color"
                    android:textSize="35sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/experience_years"
                    android:textStyle="bold"
                    android:textColor="@color/primary_color"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:textSize="17sp"
                    android:textColor="@color/primary_color"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:textStyle="bold"
                    android:text="@string/specialize"
                    android:textColor="@color/primary_color"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/specialization_1"
                    android:textColor="@color/primary_color"
                    android:layout_marginTop="10dp"
                    android:textSize="17sp"
                    android:layout_marginBottom="20dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:textStyle="bold"
                    android:text="@string/favorite_spot"
                    android:textColor="@color/primary_color"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/spot_1"
                    android:textColor="@color/primary_color"
                    android:layout_marginTop="10dp"
                    android:textSize="17sp"
                    android:layout_marginBottom="20dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:textStyle="bold"
                    android:text="@string/pricing_information"
                    android:textColor="@color/primary_color"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/personal_shoot"
                    android:textColor="@color/primary_color"
                    android:layout_marginTop="20dp"
                    android:textSize="17sp"
                    android:layout_marginBottom="10dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="$160 AU"
                    android:textStyle="bold"
                    android:textColor="@color/primary_color"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/per_session"
                    android:textSize="17sp"
                    android:textColor="@color/primary_color"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/commercial_shoot"
                    android:textColor="@color/primary_color"
                    android:textSize="17sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:textStyle="bold"
                    android:text="$700 AU"
                    android:textColor="@color/primary_color"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/per_day"
                    android:textSize="17sp"
                    android:textColor="@color/primary_color"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/event_shoot"
                    android:textSize="17sp"
                    android:textColor="@color/primary_color"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:textStyle="bold"
                    android:text="@string/not_available"
                    android:textColor="@color/primary_color"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/per_hour"
                    android:textSize="17sp"
                    android:textColor="@color/primary_color"
                    android:layout_marginTop="10dp" />

            </LinearLayout>

<!--ViewFlipper-->
            <ViewFlipper
                android:id="@+id/view_flipper"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginTop="80dp"
                android:autoStart="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/detail">

                <ImageView
                    android:id="@+id/iv_img1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/img1"
                    android:contentDescription="@string/image" />

                <ImageView
                    android:id="@+id/iv_img2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/img2"
                    android:contentDescription="@string/image" />

                <ImageView
                    android:id="@+id/iv_img3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/img3"
                    android:contentDescription="@string/image" />

                <ImageView
                    android:id="@+id/iv_img4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/img4"
                    android:contentDescription="@string/image" />

                <ImageView
                    android:id="@+id/iv_img5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/img5"
                    android:contentDescription="@string/image" />
            </ViewFlipper>

            <TextView
                android:id="@+id/tv_img_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/example_content"
                android:textColor="@color/white"
                android:layout_margin="8dp"
                app:layout_constraintEnd_toEndOf="@+id/view_flipper"
                app:layout_constraintTop_toTopOf="@+id/view_flipper" />

            <ImageButton
                android:id="@+id/btn_next"
                android:layout_width="38dp"
                android:layout_height="100dp"
                android:background="#23000000"
                android:src="@drawable/ic_navigate_next_24"
                app:layout_constraintBottom_toBottomOf="@+id/view_flipper"
                app:layout_constraintEnd_toEndOf="@+id/view_flipper"
                app:layout_constraintTop_toTopOf="@+id/view_flipper"
                tools:ignore="SpeakableTextPresentCheck"
                android:contentDescription="@string/image" />

            <ImageButton
                android:id="@+id/btn_previous"
                android:layout_width="38dp"
                android:layout_height="100dp"
                android:background="#23000000"
                android:src="@drawable/ic_navigate_before_24"
                app:layout_constraintBottom_toBottomOf="@+id/view_flipper"
                app:layout_constraintStart_toStartOf="@+id/view_flipper"
                app:layout_constraintTop_toTopOf="@+id/view_flipper"
                tools:ignore="SpeakableTextPresentCheck"
                android:contentDescription="@string/image" />

<!--Review-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="23dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="23dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view_flipper">

                <TextView
                    android:id="@+id/tv_username_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:text="@string/example_content"
                    app:layout_constraintBottom_toBottomOf="@+id/card_view_1"
                    app:layout_constraintStart_toEndOf="@+id/card_view_1"
                    app:layout_constraintTop_toTopOf="@+id/card_view_1" />

                <TextView
                    android:id="@+id/tv_date_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="@string/example_content"
                    android:textSize="11.5sp"
                    app:layout_constraintBottom_toBottomOf="@+id/rb_rating_1"
                    app:layout_constraintStart_toEndOf="@+id/rb_rating_1"
                    app:layout_constraintTop_toTopOf="@+id/rb_rating_1" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_view_1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    app:cardCornerRadius="30dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/iv_reviewer_avatar_1"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:scaleType="centerCrop"
                        android:contentDescription="@string/image" />
                </androidx.cardview.widget.CardView>

                <RatingBar
                    android:id="@+id/rb_rating_1"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:numStars="5"
                    android:rating="3"
                    android:stepSize="1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/card_view_1" />

                <TextView
                    android:id="@+id/tv_comment_1"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="3dp"
                    android:background="@color/teal_200"
                    android:text="@string/example_content"
                    app:layout_constraintTop_toBottomOf="@+id/rb_rating_1" />

                <TextView
                    android:id="@+id/tv_username_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:text="@string/example_content"
                    app:layout_constraintBottom_toBottomOf="@+id/card_view_2"
                    app:layout_constraintStart_toEndOf="@+id/card_view_2"
                    app:layout_constraintTop_toTopOf="@+id/card_view_2" />

                <TextView
                    android:id="@+id/tv_date_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="@string/example_content"
                    android:textSize="11.5sp"
                    app:layout_constraintBottom_toBottomOf="@+id/rb_rating_2"
                    app:layout_constraintStart_toEndOf="@+id/rb_rating_2"
                    app:layout_constraintTop_toTopOf="@+id/rb_rating_2" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_view_2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="10dp"
                    app:cardCornerRadius="30dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_comment_1">

                    <ImageView
                        android:id="@+id/iv_reviewer_avatar_2"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:contentDescription="@string/image"
                        android:scaleType="centerCrop" />
                </androidx.cardview.widget.CardView>

                <RatingBar
                    android:id="@+id/rb_rating_2"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:numStars="5"
                    android:rating="3"
                    android:stepSize="1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/card_view_2" />

                <TextView
                    android:id="@+id/tv_comment_2"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="3dp"
                    android:background="@color/teal_200"
                    android:text="@string/example_content"
                    app:layout_constraintTop_toBottomOf="@+id/rb_rating_2" />

                <TextView
                    android:id="@+id/tv_username_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:text="@string/example_content"
                    app:layout_constraintBottom_toBottomOf="@+id/card_view_3"
                    app:layout_constraintStart_toEndOf="@+id/card_view_3"
                    app:layout_constraintTop_toTopOf="@+id/card_view_3" />

                <TextView
                    android:id="@+id/tv_date_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="@string/example_content"
                    android:textSize="11.5sp"
                    app:layout_constraintBottom_toBottomOf="@+id/rb_rating_3"
                    app:layout_constraintStart_toEndOf="@+id/rb_rating_3"
                    app:layout_constraintTop_toTopOf="@+id/rb_rating_3" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_view_3"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="10dp"
                    app:cardCornerRadius="30dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_comment_2">

                    <ImageView
                        android:id="@+id/iv_reviewer_avatar_3"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:contentDescription="@string/image"
                        android:scaleType="centerCrop" />
                </androidx.cardview.widget.CardView>

                <RatingBar
                    android:id="@+id/rb_rating_3"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:numStars="5"
                    android:rating="3"
                    android:stepSize="1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/card_view_3" />

                <TextView
                    android:id="@+id/tv_comment_3"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="3dp"
                    android:background="@color/teal_200"
                    android:text="@string/example_content"
                    app:layout_constraintTop_toBottomOf="@+id/rb_rating_3" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

<!--Top bar & Back Button-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:background="@color/separate_line">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:padding="10dp"
            android:src="@drawable/ic_navigate_before_24"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    </LinearLayout>

<!--Bottom bar & Contact, Booking Button-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:weightSum="2">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/contact"
            android:background="@drawable/rectangle_button"
            android:textColor="@color/white"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/booking"
            android:background="@drawable/rectangle_button"
            android:textColor="@color/white"/>

    </LinearLayout>
</RelativeLayout>
